<div class="container">
  <div class="card ">
    <div class="card-header card bg-primary">
    </div>
    <div class="card-body">
      <table class="table">
        <thead>
          <th>image</th>
          <th>name</th>
          <th>model</th>
          <th>price</th>
          <th>status</th>
          <th>rating</th>
        </thead>
        {{#each tiles}}
        <tr>
          <td><img src="/images/{{image}}"></td>
          <td><a href="/data/tiles/{{name}}">{{name}}</a></td>
          <td>{{model}}</td>
          <td>{{price}}</td>
          <td>{{status}}</td>
          <td>{{rating}}</td>
        </tr>
        {{/each}}
      </table>
    </div>
  </div>
</div>